<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">


    <TextView
        android:layout_height="wrap_content"
        android:inputType="textPersonName"

        android:id="@+id/list_item_textfriends"

        android:textColor="@android:color/black"
        android:clickable="false"
        android:contextClickable="false"
        android:rotation="0"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/list_item_friends"
        android:layout_toEndOf="@+id/list_item_friends"
        />

    <com.nightonke.boommenu.BoomMenuButton
        android:id="@+id/boom_circlefriends"
        android:layout_height="70dp"
        app:boom_inList="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="90dp" />

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/list_item_friends"
        android:layout_gravity="bottom"

        android:rotation="0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp">


    </com.facebook.login.widget.ProfilePictureView>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/onlineCheck"
        android:clickable="false"
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>