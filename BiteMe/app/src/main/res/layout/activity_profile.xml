    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Looking for:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="250dp"
            android:textSize="15dp"
            android:id="@+id/loking"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/woman_man"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="245dp"
            android:id="@+id/lookingImg"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="121dp"
            app:srcCompat="@drawable/biteme2"
            android:id="@+id/imageBanner"
            android:layout_weight="0" />

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/friendsprofilepic"
            android:gravity="right|bottom"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="125dp"
            tools:layout_gravity="left"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="49dp"
            android:layout_height="45dp"
            android:layout_marginLeft="325dp"
            app:srcCompat="@android:drawable/ic_menu_delete"
            android:id="@+id/imageremoveF" />

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="215dp"
            android:textSize="20dp"
            android:id="@+id/Friendstxt"
            android:layout_weight="1"/>

    </FrameLayout>

